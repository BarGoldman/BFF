<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.getLostView"
    >


    <ImageButton
        android:id="@+id/get_lost_viewlost"
        android:layout_width="159dp"
        android:layout_height="139dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/colorbutton"
        android:contentDescription="photo"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:text="view lost"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233"
        app:srcCompat="@drawable/post_sale" />

    <TextView
        android:id="@+id/View_Lost_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="post sale"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/get_lost_viewlost" />


    <ImageButton
        android:id="@+id/get_lost_IgotLost"
        android:layout_width="159dp"
        android:layout_height="139dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/colorbutton"
        android:contentDescription="photo"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:text="I got lost"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/View_Lost_title"
        app:srcCompat="@drawable/viewlost"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/IgotLostTitel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="see your sales"
        android:textColor="#000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/get_lost_IgotLost" />

</androidx.constraintlayout.widget.ConstraintLayout>