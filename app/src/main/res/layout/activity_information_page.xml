<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.informationPageView"
    android:gravity="center">


    <TextView
        android:id="@+id/inf_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dogs_and_cats_and_everything_in_between"
        android:textColor="#000"
        android:textSize="35sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <TextView
        android:id="@+id/inf_textClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/clicking_on_the_following_button_will_take_you_to_the_pafiz_website"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inf_b" />

    <ImageButton
        android:id="@+id/inf_imageButton"
        android:layout_width="165dp"
        android:layout_height="167dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inf_textClick"
        app:layout_constraintTop_toTopOf="@id/inf_textClick"
        app:layout_constraintVertical_bias="0.4"
        android:background="@drawable/colorbutton"
        app:srcCompat="@drawable/homebutton"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:text="view lost"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:backgroundTint="@null"
        />

</androidx.constraintlayout.widget.ConstraintLayout>